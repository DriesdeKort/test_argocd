apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: apache-ingress
  annotations:
    kubernetes.io/ingress.class: "alb"
    alb.ingress.kubernetes.io/target-type: "ip"
    alb.ingress.kubernetes.io/scheme: internet-facing
spec:
  rules:
    - http:
       paths:
         - backend:
            serviceName: argocd-server
            servicePort: https
    - http:
       paths:
         - path: /
           pathType: Prefix
           backend:
              service:
                name: apache-service
                port:
                  number: 80
